#!/bin/bash
# Host-specific colour (31-36)
#
# If /etc/hostcolor and it is executable, it's used to obtain colour
# escape. If not â€” colour is generated from the host name (omitting
# red as it is reserved for critical servers).

ROOT_COLOUR_NO=${1:-31}

if [ -x /etc/hostcolour ]
then
    PS1_host_colour="$( /etc/hostcolour )"
fi

if [ -z "${PS1_host_colour}" ]
then
    MD5CMD="$( which md5sum || which md5 )"
    if [ -n "${MD5CMD}" ]
    then
        HOSTNAME_HASH=$( hostname | "${MD5CMD}" )
        CODE=$(( 0x${HOSTNAME_HASH:27:1}${HOSTNAME_HASH:3:1} - 12 ))
        if (( CODE < 0 ))
        then
            CODE=$(( CODE + 256 ))
        fi
        CODE=$(( (CODE-2) % 220 + 2 ))

        # blacks (unreadable on most terminals)
        if (( CODE == 0 )) || (( CODE == 16 ))
        then
            CODE=$(( ( CODE + 128 ) % 222 ))
        fi
        # reds (reserved for special ocasions)
        if (( CODE == 9 )) || (( ( CODE-52 )%36 == 0 && CODE >= 52 ))
        then
            CODE=$(( ( CODE + 128 ) % 222 ))
        fi

        if [ "$( tput colors )" -ge 256 ]
        then
            PS1_host_colour="$(
                tput setaf 0
                tput setab ${CODE}
            )"
        else
            CODE=$(( CODE % 6 + 32 ))
            CODE=$(( CODE + 10 ))
            PS1_host_colour="\e[${CODE}m"
        fi
        unset HOSTNAME_HASH
        unset CODE
    fi
    unset MD5CMD
fi

export PS1_host_colour

